
config openvpn 'custom_config'
	option config '/etc/openvpn/my-vpn.conf'

config openvpn 'sample_server'
	option dev 'tun'
	option ifconfig_pool_persist '/tmp/ipp.txt'
	option keepalive '10 120'
	option persist_key '1'
	option persist_tun '1'
	option user 'nobody'
	option status '/tmp/openvpn-status.log'
	option verb '3'
	option ca '/lib/uci/upload/cbid.openvpn.sample_server.ca'
	option cert '/lib/uci/upload/cbid.openvpn.sample_server.cert'
	option key '/lib/uci/upload/cbid.openvpn.sample_server.key'
	option dh '/lib/uci/upload/cbid.openvpn.sample_server.dh'
	option server '10.8.0.0 255.255.255.0'
	option port '1194'
	option proto 'udp'
	option comp_lzo 'yes'
	option enabled '0'

config openvpn 'sample_client'
	option client '1'
	option dev 'tun'
	option proto 'udp'
	option resolv_retry 'infinite'
	option nobind '1'
	option persist_key '1'
	option persist_tun '1'
	option user 'nobody'
	option comp_lzo 'yes'
	option verb '3'
	option remote 'xxxx.com 1194'
	option key '/lib/uci/upload/cbid.openvpn.sample_client.key'
	option cert '/lib/uci/upload/cbid.openvpn.sample_client.cert'
	option ca '/lib/uci/upload/cbid.openvpn.sample_client.ca'
	option enabled '0'

